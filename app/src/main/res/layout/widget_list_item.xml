<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="@dimen/list_item_margin">

    <TextView
        android:id="@+id/questionNo"
        android:maxLines="1"
        android:textSize="@dimen/main_ques_text_size"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Question No. 1"/>

    <TextView
        android:id="@+id/question"
        android:maxLines="2"
        android:textSize="@dimen/main_ans_text_size"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="What tastes better with pizza and any other random options also?"/>

    <TextView
        android:id="@+id/peeps"
        android:textSize="@dimen/main_ans_text_size"
        android:textColor="#529952"
        tools:text="123 people answered this."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>